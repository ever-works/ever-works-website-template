# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================

# Application Environment
NODE_ENV=development

# ============================================
# AUTHENTICATION & SECURITY
# ============================================

## NextAuth Configuration
AUTH_SECRET="change-me-generate-with-openssl-rand-base64-32"
NEXTAUTH_SECRET="same-as-auth-secret"
NEXTAUTH_URL="http://localhost:3000"

## JWT Configuration
COOKIE_SECRET="your-secure-cookie-secret"
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

## Cookie Security Settings
COOKIE_DOMAIN="localhost"
COOKIE_SECURE=false
COOKIE_SAME_SITE="lax"

## OAuth Providers
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

FACEBOOK_CLIENT_ID="your_facebook_client_id"
FACEBOOK_CLIENT_SECRET="your_facebook_client_secret"

TWITTER_CLIENT_ID="your_twitter_client_id"
TWITTER_CLIENT_SECRET="your_twitter_client_secret"

MICROSOFT_CLIENT_ID="your_microsoft_client_id"
MICROSOFT_CLIENT_SECRET="your_microsoft_client_secret"

LINKEDIN_CLIENT_ID="your_linkedin_client_id"
LINKEDIN_CLIENT_SECRET="your_linkedin_client_secret"

# ============================================
# DATABASE & STORAGE
# ============================================

## Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/db_name"

## Supabase Configuration (Alternative to PostgreSQL)
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# ============================================
# API & BACKEND SERVICES
# ============================================

## Site URLs
NEXT_PUBLIC_SITE_URL="https://your-domain.com"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000/api"

## API Configuration
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

## Auth Endpoints
AUTH_ENDPOINT_LOGIN="/auth/login"
AUTH_ENDPOINT_REFRESH="/auth/refresh"
AUTH_ENDPOINT_LOGOUT="/auth/logout"
AUTH_ENDPOINT_CHECK="/auth/check"

## Email Services
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM_ADDRESS="noreply@your-domain.com"
NOVU_API_KEY="your-novu-api-key"

## GitHub Integration
GH_TOKEN="your-github-personal-access-token"
DATA_REPOSITORY="https://github.com/your-username/your-content-repo"

# ============================================
# PAYMENT & PRICING
# ============================================

## Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

## Product Pricing
NEXT_PUBLIC_PRODUCT_PRICE_FREE=0
NEXT_PUBLIC_PRODUCT_PRICE_PRO=10
NEXT_PUBLIC_PRODUCT_PRICE_SPONSOR=20

# ============================================
# ANALYTICS & MONITORING
# ============================================

## PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY="your-posthog-project-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"
POSTHOG_DEBUG=false
POSTHOG_SESSION_RECORDING_ENABLED=true
POSTHOG_SESSION_RECORDING_SAMPLE_RATE=0.1
POSTHOG_AUTO_CAPTURE=false
POSTHOG_SAMPLE_RATE=1.0

## Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-org-name"
SENTRY_PROJECT="your-project-name"
SENTRY_AUTH_TOKEN="your-auth-token"
SENTRY_ENABLE_DEV=false
SENTRY_DEBUG=false

## Exception Tracking Configuration
# Choose your exception tracking provider: "sentry", "posthog", "both", or "none"
EXCEPTION_TRACKING_PROVIDER="both"
POSTHOG_EXCEPTION_TRACKING=true
SENTRY_EXCEPTION_TRACKING=true

# ============================================
# INTERNATIONALIZATION
# ============================================

## Default Language Settings
DEFAULT_LOCALE="en"
SUPPORTED_LOCALES="en,fr,es,de,ar,zh"

# ============================================
# CONTENT MANAGEMENT
# ============================================

## Content Repository Settings
CONTENT_WARNINGS_SILENT=false
CONTENT_SYNC_INTERVAL=300000

# ============================================
# DEVELOPMENT TOOLS
# ============================================

## Bundle Analysis
ANALYZE=false

## Development Flags
NEXT_PUBLIC_DEBUG=false
DISABLE_ESLINT=false
DISABLE_TYPE_CHECK=false

## Logging
LOG_LEVEL="info"
ENABLE_QUERY_LOGGING=false

# ============================================
# PRODUCTION OVERRIDES
# ============================================
# These settings should be overridden in production:

# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://your-production-domain.com
# NEXTAUTH_URL=https://your-production-domain.com
# COOKIE_SECURE=true
# COOKIE_SAME_SITE=strict
# COOKIE_DOMAIN=your-production-domain.com
# POSTHOG_DEBUG=false
# SENTRY_DEBUG=false
# SENTRY_ENABLE_DEV=false
# POSTHOG_SESSION_RECORDING_SAMPLE_RATE=0.05
# POSTHOG_SAMPLE_RATE=0.1

# ============================================
# CORS CONFIGURATION (Production)
# ============================================

# CORS_ORIGIN=https://your-frontend-domain.com
# CORS_CREDENTIALS=true
# CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# ============================================
# ADDITIONAL NOTES
# ============================================

# 1. Generate AUTH_SECRET with: openssl rand -base64 32
# 2. Never commit .env.local to version control
# 3. Use different secrets for development and production
# 4. Configure OAuth providers in their respective developer consoles
# 5. Set up proper CORS settings for production
# 6. Enable security headers in production
# 7. Use environment-specific database URLs
# 8. Configure proper email service credentials
# 9. Set up monitoring and analytics keys
# 10. Test all integrations before production deployment
